<% layout('layout/boilerplate') %>

<h1>
    <%= category.toUpperCase() %>
    <% if (category == 'All') { %>Projects<% } %>
</h1>

<ul>
    <% for (let project of projects) { %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" src="<%= project.image %>" alt="Project Image">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= project.name %></h5>
                        <h6 class="card-title">Manager: <%= project.projectManager %></h6>
                        <h6 class="card-title">Start Date: <%= project.startDate.toDateString() %></h6>
                        <h6 class="card-title">End Date: <%= project.endDate ? project.endDate.toDateString() : 'Ongoing' %></h6>
                        <p class="card-text"><%= project.description %></p>
                        <a href="/projects/<%= project._id %>" class="btn btn-outline-info">View Project</a>
                    </div>
                </div>
            </div>
        </div>
    <% } %>
</ul>

<div class="mt-3 big">
    <a href="/projects/new" class="btn btn-lg btn-outline-warning">Create Project</a>
</div>

<% if (category !== 'All') { %>
    <div><a href="/projects">All Projects</a></div>
<% } %>

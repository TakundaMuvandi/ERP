<% layout('layout/boilerplate') %>

<div class="row">
   <h1 class="text-center">Create a New Construction Project</h1>
   <div class="col-6 offset-3">
    <form action="/projects" method="POST" novalidate class="validated-forms">
        <div class="mb-3">
            <label class="form-label" for="projectName">Project Name</label>
            <input class="form-control" type="text" name="projectName" id="projectName" placeholder="Enter project name" required>
            <div class="valid-feedback"> Looks Great!</div>
        </div>

        <div class="mb-3">
            <label class="form-label" for="description">Project Description</label>
            <textarea class="form-control" name="description" id="description" placeholder="Enter project details" required></textarea>
            <div class="valid-feedback"> Looks Great!</div>
        </div>

        <div class="mb-3">
            <label class="form-label" for="location">Location</label>
            <input class="form-control" type="text" id="location" name="location" placeholder="Enter project location" required>
            <div class="valid-feedback"> Looks Great!</div>
        </div>

        <div class="mb-3">
            <label class="form-label" for="projectType">Project Type</label>
            <select class="form-control" name="projectType" id="projectType" required>
                <% const projectTypes = ['Building Construction', 'Road Construction', 'Plumbing Infrastructure', 'Electrical Installation', 'Carpentry Work', 'Metal Fabrication', 'Renovation', 'Painting']; %>
                <% for(let type of projectTypes) { %>
                    <option value="<%= type.toLowerCase() %>"><%= type %></option>
                <% } %>
            </select>
            <div class="valid-feedback"> Looks Great!</div>   
        </div>

        <div class="mb-3">
            <label class="form-label" for="startDate">Start Date</label>
            <input class="form-control" type="date" id="startDate" name="startDate" required>
            <div class="valid-feedback"> Looks Great!</div>
        </div>

        <div class="mb-3">
            <label class="form-label" for="completionDate">Estimated Completion Date</label>
            <input class="form-control" type="date" id="completionDate" name="completionDate">
            <div class="valid-feedback"> Looks Great!</div>
        </div>

        <div class="mb-3">
            <label class="form-label" for="status">Project Status</label>
            <select class="form-control" name="status" id="status">
                <option value="planned">Planned</option>
                <option value="in progress">In Progress</option>
                <option value="completed">Completed</option>
            </select>
            <div class="valid-feedback"> Looks Great!</div>   
        </div>

        <div class="mb-3">
            <label class="form-label" for="budget">Budget (USD)</label>
            <input class="form-control" type="number" step="0.01" id="budget" name="budget" placeholder="Enter budget amount" required>
            <div class="valid-feedback"> Looks Great!</div>    
        </div>

        <div class="mb-3">
            <label class="form-label" for="amountSpent">Amount Spent (USD)</label>
            <input class="form-control" type="number" step="0.01" id="amountSpent" name="amountSpent" placeholder="Enter amount spent">
            <div class="valid-feedback"> Looks Great!</div>    
        </div>

        <div class="mb-3">
            <label class="form-label" for="projectManager">Project Manager</label>
            <input class="form-control" type="text" id="projectManager" name="projectManager" placeholder="Enter manager's name" required>
            <div class="valid-feedback"> Looks Great!</div>    
        </div>

        <div class="mb-3">
            <label class="form-label" for="materials">Materials Used (comma-separated)</label>
            <input class="form-control" type="text" id="materials" name="materials" placeholder="e.g., Cement, Bricks, Steel Rods">
            <div class="valid-feedback"> Looks Great!</div>    
        </div>

        <div class="mb-3">
            <label class="form-label" for="attachments">Attachments (URLs)</label>
            <input class="form-control" type="text" id="attachments" name="attachments" placeholder="Enter document or image URLs">
            <div class="valid-feedback"> Looks Great!</div>    
        </div>

        <div class="mt-3">
            <button class="btn btn-lg btn-outline-info">Create Project</button>
        </div>
    </form>
    <div class="mt-3 big">
        <a href="/projects" class="btn btn-sm btn-outline-danger">Cancel</a>
    </div>
   </div>
</div>
